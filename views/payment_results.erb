<h1>
    Payment Results
<h1>

<% params %>

<dl>
    <dt>
        APR
    </dt>
    <dd>
        <%= @apr %> 
    </dd>

    <dt>
        Number of years
    </dt>
    <dd>
        <%= @years %>
    </dd>

    <dt>
      Principal
    </dt>
    <dd>
      <%= sprintf("$%.2f", @principal) %>

    <dt>
      Payment
    </dt>
    <dd>
      <%= sprintf("$%.2f", @payment) %>
    </dd>
</dl>

<a href = "/payment/new">
    Calculate another payment
</a>
